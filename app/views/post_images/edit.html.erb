<h1>Edit Form</h1>
<!-- form_with部分 -->
<%= form_with model: @post_image, local: true do |f| %>
  <h4>Image</h4>
  <%= f.attachment_field :image %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Caption</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Save' %>
<% end %>

<%= link_to "Top", post_image_path %>