<!-- main -->
<main>
  <section class="blog">
    <h2 class="blog-heading">Recent Blogs</h2>
    <!-- 投稿一覧 -->
<% @post_images.each do |post_image| %>
    <div class="blog-box">
      <div class="blog-item">
          <%= link_to post_image_path(post_image.id) do %>
            <%= attachment_image_tag post_image, :image , class: 'blog-image' %>
          <% end %>
        <section class="blog-text">
          <h4 class="blog-text-heading">
              <p><%= post_image.title %></p>
          </h4>
             <p class="blog-date"><%= post_image.created_at.strftime('%Y/%m/%d') %></p>
        </section>
      </div>
    </div>
    <% end %>
    <div class="pagination">
      <p><<</p>
      <p><</p>
      <p>1</p>
      <p>2</p>
      <p>3</p>
      <p>></p>
      <p>>></p>
    </div>
  </section>

