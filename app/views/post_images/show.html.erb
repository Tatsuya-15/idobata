<div>
  <%= attachment_image_tag @post_image, :image ,size: "300x300" %>
  <p>Posted Date：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <p>Title：<%= @post_image.title %></p>
  <p>Caption：<br/>
  <%= @post_image.caption %>
  </p>
   <%= link_to "Top", post_images_path%>
  <% if @post_image.admin == current_admin %>
    <%= link_to "Edit", edit_post_image_path(@post_image) %>
    <%= link_to "De", post_image_path(@post_image), method: :delete %>
  <% end %>


</div>